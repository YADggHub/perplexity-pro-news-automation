# =============================================================================
# PERPLEXITY PRO НАСТРОЙКИ
# =============================================================================
# Учетные данные для вашего Perplexity Pro аккаунта ($20/месяц)
PERPLEXITY_EMAIL=your-email@example.com
PERPLEXITY_PASSWORD=your-secure-password

# =============================================================================
# TELEGRAM BOT НАСТРОЙКИ  
# =============================================================================
# Токен получен от @BotFather в Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# ID ваших Telegram каналов (начинаются с -100 или @username)
TG_IT_CHANNEL=-1001234567890
TG_AUTOMATION_CHANNEL=-1001234567891
TG_ROBOTICS_CHANNEL=-1001234567892

# =============================================================================
# СИСТЕМА НАСТРОЙКИ
# =============================================================================
# Максимум запросов в день (рекомендуется не более 50 из 300 доступных)
MAX_DAILY_QUERIES=50

# Минимальная важность для публикации (1-10, рекомендуется 6+)
MIN_IMPORTANCE_TO_PUBLISH=6

# Максимум запросов в одной сессии
MAX_QUERIES_PER_SESSION=15

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Путь к базе данных
DATABASE_PATH=data/perplexity_news.db

# =============================================================================
# ПЛАНИРОВЩИК НАСТРОЙКИ
# =============================================================================
# Утренняя сессия
MORNING_SESSION_TIME=09:00
MORNING_SESSION_POSTS=3
MORNING_SESSION_QUERIES=8

# Дневная сессия  
AFTERNOON_SESSION_TIME=13:00
AFTERNOON_SESSION_POSTS=4
AFTERNOON_SESSION_QUERIES=10

# Вечерняя сессия
EVENING_SESSION_TIME=18:00
EVENING_SESSION_POSTS=5
EVENING_SESSION_QUERIES=12

# Ночная сессия
NIGHT_SESSION_TIME=22:00
NIGHT_SESSION_POSTS=3
NIGHT_SESSION_QUERIES=8

# =============================================================================
# БРАУЗЕР НАСТРОЙКИ
# =============================================================================
# Запуск браузера без интерфейса (рекомендуется true)
BROWSER_HEADLESS=true

# Таймаут ожидания ответа от Perplexity (секунды)
BROWSER_TIMEOUT=30

# Размер окна браузера
BROWSER_WINDOW_SIZE=1920,1080

# User Agent для браузера
BROWSER_USER_AGENT=Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36

# =============================================================================
# ПРОИЗВОДИТЕЛЬНОСТЬ НАСТРОЙКИ
# =============================================================================
# Максимум попыток повтора при ошибке
MAX_RETRY_ATTEMPTS=3

# Задержка между повторными попытками (секунды)
RETRY_DELAY_SECONDS=5

# Задержка между запросами к Perplexity (секунды)
QUERY_DELAY_SECONDS=30

# Лимит запросов в минуту
REQUESTS_PER_MINUTE=2

# Лимит для Telegram API (секунды между сообщениями)
TELEGRAM_RATE_LIMIT=30

# =============================================================================
# МОНИТОРИНГ НАСТРОЙКИ
# =============================================================================
# Интервал проверки здоровья системы (секунды)
HEALTH_CHECK_INTERVAL=300

# Сколько дней хранить метрики
METRICS_RETENTION_DAYS=30

# =============================================================================
# РЕЗЕРВНОЕ КОПИРОВАНИЕ
# =============================================================================
# Включить автоматическое резервное копирование
AUTO_BACKUP_ENABLED=true

# Интервал резервного копирования (часы)
BACKUP_INTERVAL_HOURS=24

# Сколько дней хранить резервные копии
BACKUP_RETENTION_DAYS=7

# =============================================================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ (ОПЦИОНАЛЬНЫЕ)
# =============================================================================
# Порт для веб-интерфейса
DASHBOARD_PORT=8080

# Порт для health check API
HEALTH_PORT=8081

# Включить детальное логирование браузера
BROWSER_VERBOSE_LOGGING=false

# Сохранять скриншоты при ошибках
SAVE_ERROR_SCREENSHOTS=true

# Максимальный размер лог файла (MB)
MAX_LOG_FILE_SIZE=100
